@model IEnumerable<Category> 
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4 pb-4">
        <div class = "col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class = "col-6 text-end">
            <a class="btn btn-primary" asp-action="Create">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Category
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped" width="100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="50%">
                    @item.Name
                </td>
                <td width="30%">
                    @item.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group " role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info mx-2"><i class="bi bi-info-circle"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>